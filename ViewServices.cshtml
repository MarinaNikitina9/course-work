@model List<Service>

@{
    ViewData["Title"] = "Услуги";
}

<h2>Услуги</h2>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Description</td>
                <td>@service.Price</td>
                <td>
                    <form asp-action="CreateOrder" method="post">
                        <input type="hidden" name="serviceId" value="@service.Id" />
                        <button type="submit">Заказать</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>